<%= content_tag :div, class: "nested-fields", data: {new_record: form.object.new_record? } do %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control required" %>
    <small><%= link_to "Remove", "#", class: "btn btn-sm btn-outline-primary mt-2", data: {action: "click->books#remove_comment_association"}%></small>
  </div>

  <%= form.hidden_field :_destroy %>
<% end %>
